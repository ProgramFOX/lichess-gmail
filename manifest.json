{
  "name": "lichess contact email",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Tools to better support users through gmaial",
  "homepage_url": "https://lichess.org",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "clipboardWrite",
    "https://mail.google.com/mail/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
