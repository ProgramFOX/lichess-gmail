{
  "name": "lichess contact email",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Tools to better support users through gmail",
  "homepage_url": "https://lichess.org",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["src/bg/background.js"]
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "https://mail.google.com/mail/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "css": [
        "inject.css"
      ],
      "js": [
        "mousetrap.min.js",
        "inject.js"
      ]
    }
  ]
}
